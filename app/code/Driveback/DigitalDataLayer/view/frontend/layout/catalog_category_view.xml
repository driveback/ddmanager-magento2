<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="before.body.end">
            <block class="Driveback\DigitalDataLayer\Block\Layer\Listing" name="ddl_listing"
                   template="Driveback_DigitalDataLayer::listing.phtml">
                <arguments>
                    <argument name="list_name" xsi:type="string">category</argument>
                    <argument name="product_list_block_name" xsi:type="string">category.products.list</argument>
                    <argument name="show_category" xsi:type="boolean">true</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
